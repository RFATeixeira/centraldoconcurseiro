rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ====================
    // USERS COLLECTION
    // ====================
    match /users/{userId} {
      // Qualquer usuário autenticado pode ler qualquer perfil
      allow read: if request.auth != null;
      
      // Qualquer usuário autenticado pode escrever (simplificado para teste)
      allow write: if request.auth != null;

      // ====================
      // USER CONCURSOS SUBCOLLECTION
      // ====================
      match /concursos/{concursoId} {
        // Cada usuário só acessa seus próprios concursos
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ====================
    // CHATS COLLECTION
    // ====================
    match /chats/{chatId} {
      // Qualquer usuário autenticado pode fazer tudo (simplificado)
      allow read, write: if request.auth != null;

      // ====================
      // MESSAGES SUBCOLLECTION
      // ====================
      match /messages/{messageId} {
        // Qualquer usuário autenticado pode fazer tudo (simplificado)
        allow read, write: if request.auth != null;
      }
    }

    // ====================
    // CONCURSOS COLLECTION
    // ====================
    match /concursos/{concursoId} {
      // Qualquer usuário autenticado pode fazer tudo
      allow read, write: if request.auth != null;
    }

    // ====================
    // FALLBACK - DENY ALL
    // ====================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
